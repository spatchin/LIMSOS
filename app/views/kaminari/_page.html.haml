- if page.current?
  %li(class='active')
    = link_to page, '#', remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), class: (remote ? 'pjax' : '')
- else
  %li
    = link_to page, url, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), class: (remote ? 'pjax' : '')
