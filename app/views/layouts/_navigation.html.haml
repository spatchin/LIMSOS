%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      = link_to 'TestApp', '/', class: 'navbar-brand'
    #navbar
      %ul.nav.navbar-nav.navbar-left
        %li#home{class: ('active' if current_page?('/'))}
          =link_to 'Home', '/', class: 'pjax'
        %li#biomass{class: ('active' if current_page?('/biomass'))}
          =link_to 'Biomasses', '/biomass', class: 'pjax'
        %li#biomass_type{class: ('active' if current_page?('/biomass_type'))}
          =link_to 'Biomass Types', '/biomass_type', class: 'pjax'
        %li#feedstock{class: ('active' if current_page?('/feedstock'))}
          =link_to 'Feedstocks', '/feedstock', class: 'pjax'
        %li#harvest{class: ('active' if current_page?('/harvest'))}
          =link_to 'Harvests', '/harvest', class: 'pjax'
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li{class: ['dropdown', ('active' if current_page?(edit_registration_path(current_user)))]}
            %a{class: 'dropdown-toggle', 'data-toggle' => 'dropdown', href: '#'}
              = icon('user', current_user.email)
              %span.caret
            %ul.dropdown-menu{role: 'menu'}
              %li= link_to icon('cog', 'Profile'), edit_registration_path(current_user)
              %li= link_to icon('sign-out', 'Log out'), destroy_session_path(current_user), method: :delete
        - else
          %li{class: ('active' if current_page?('/users/sign_in'))}
            = link_to icon('sign-in', 'Log in'), '/users/sign_in'
          %li{class: ('active' if current_page?('/users/sign_up'))}
            = link_to icon('user_plus', 'Sign up'), '/users/sign_up'
