%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %a= link_to 'TestApp', '/', class: 'navbar-brand'
    #navbar
      %ul.nav.navbar-nav.navbar-left
        %li{class: ('active' if current_page?('/'))}
          =link_to 'Home', '/'
        %li{class: ('active' if current_page?('/dash/biomass_type'))}
          =link_to 'Biomass Types', '/dash/biomass_type'
        %li{class: ('active' if current_page?('/dash/biomass'))}
          =link_to 'Biomasses', '/dash/biomass'
        %li{class: ('active' if current_page?('/dash/feedstock'))}
          =link_to 'Feedstocks', '/dash/feedstock'
        %li{class: ('active' if current_page?('/dash/harvest'))}
          =link_to 'Harvests', '/dash/harvest'
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li{class: ['dropdown', ('active' if current_page?(edit_registration_path(current_user)))]}
            %a{class: 'dropdown-toggle', 'data-toggle' => 'dropdown', href: '#'}
              = icon('user', current_user.email)
              %span.caret
            %ul.dropdown-menu{role: 'menu'}
              %li= link_to icon('cog', 'Profile'), edit_registration_path(current_user)
              %li= link_to icon('sign-out', 'Log out'), destroy_session_path(current_user), method: :delete
        - else
          %li{class: ('active' if current_page?('/users/sign_in'))}
            = link_to icon('sign-in', 'Log in'), '/users/sign_in'
          %li{class: ('active' if current_page?('/users/sign_up'))}
            = link_to icon('user_plus', 'Sign up'), '/users/sign_up'
