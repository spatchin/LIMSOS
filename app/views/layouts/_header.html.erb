<% active = request.fullpath.split('?')[0] %>

<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'TestApp', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav navbar-left">
        <li <%=raw 'class="active"' if current_page?(root_path) %>><%= link_to 'Home', root_path %></li>
        <li <%=raw 'class="active"' if current_page?('/about') %>><%= link_to 'About', '/about' %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown <%=raw 'active' if current_page?(edit_user_registration_path) %>">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= icon('user', current_user.email) %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to icon('cog', 'Profile'), edit_user_registration_path %></li>
              <li><%= link_to icon('sign-out', 'Log out'), destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li <%=raw 'class="active"' if current_page?(new_user_session_path) %>><%= link_to icon('sign-in', 'Log in'), new_user_session_path %></li>
          <li <%=raw 'class="active"' if current_page?(new_user_registration_path) %>><%= link_to icon('user-plus', 'Sign up'), new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
