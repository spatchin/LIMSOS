<div class="authform">
  <h3>Sign in</h3>
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form'}) do |f| %>
    <%- if devise_mapping.registerable? %>
      <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
    <% end -%>
    <%= f.email_field :email, autofocus: true %>
    <%- if devise_mapping.recoverable? %>
      <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
    <% end -%>
    <%= f.password_field :password %>
    <div class="row">
      <div class="col-xs-6">
        <%= f.check_box :remember_me %>
      </div>
      <div class="col-xs-6">
        <%= f.submit 'Sign in', class: 'button right' %>
      </div>
    </div>
  <% end %>
</div>
