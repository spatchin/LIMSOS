= provide :title, 'Profile'

.row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h4 Edit profile
      .panel-body
        = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, role: 'form'}) do |f|
          = f.text_field :username, autofocus: true
          = f.text_field :first_name
          = f.text_field :last_name
          = f.email_field :email
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            Currently waiting confirmation for: = resource.unconfirmed_email
          %hr
          %em Leave password fields blank if you don't want to change your password.
          = f.password_field :password, autocomplete: 'off'
          = f.password_field :password_confirmation
          %hr
          = f.password_field :current_password, help: 'You must enter your current password to make changes'
          = f.submit 'Update account', class: 'btn btn-success', style: 'width: 100%;'
.row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h4 Cancel Account
      .panel-body
        = link_to "Cancel account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger', style: 'width: 100%;'
